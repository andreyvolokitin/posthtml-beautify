{
  "name": "posthtml-beautify",
  "version": "0.2.0",
  "description": "A posthtml plugin to beautify you html files",
  "license": "MIT",
  "repository": "gitscrum/posthtml-beautify",
  "homepage": "gitscrum/posthtml-beautify#readme",
  "bugs": "gitscrum/posthtml-beautify/issues",
  "author": {
    "name": "Ivan Demidov",
    "email": "Scrum@list.ru",
    "url": "https://twitter.com/Scrum_"
  },
  "main": "lib/index.js",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "precommit": "clinton && lint-staged",
    "commitmsg": "commitlint --extends=@commitlint/config-angular -e",
    "postpublish": "conventional-changelog -i changelog.md -s -r 0 && git commit -am \"build: update changelog\"",
    "prepare": "npm run build",
    "docs": "cross-env BABEL_ENV=docs webpack --progress --env.prod -p",
    "build": "rimraf lib && cross-env BABEL_ENV=production babel src -d lib --ignore docs",
    "test": "cross-env BABEL_ENV=production nyc ava",
    "serve": "cross-env BABEL_ENV=docs webpack-dashboard -- webpack-dev-server --content-base docs/ --open"
  },
  "files": [
    "lib/"
  ],
  "keywords": [
    "html",
    "posthtml",
    "posthtml-plugin",
    "beautify",
    "beautifier",
    "code-quality"
  ],
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "deepmerge": "^2.0.1",
    "posthtml-parser": "^0.3.1",
    "posthtml-render": "1.0.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-angular": "^8.3.4",
    "ava": "*",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.0",
    "babel-plugin-array-includes": "^2.0.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-minify": "^0.2.0",
    "babel-register": "^6.26.0",
    "clinton": "0.13.0",
    "conventional-changelog-cli": "^1.3.5",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.8",
    "eslint": "^4.4.1",
    "eslint-plugin-ava": "^4.4.0",
    "eslint-plugin-babel": "4.1.2",
    "eslint-plugin-html": "^4.0.1",
    "eslint-plugin-markdown": "^1.0.0-beta.2",
    "eslint-plugin-unicorn": "^3.0.1",
    "highlight.js": "9.12.0",
    "html-webpack-plugin": "^2.30.1",
    "husky": "0.14.3",
    "is-promise": "^2.1.0",
    "lint-staged": "^6.0.0",
    "nyc": "^11.4.1",
    "posthtml": "^0.11.0",
    "posthtml-include": "^1.1.0",
    "posthtml-modules": "^0.4.2",
    "rimraf": "^2.6.2",
    "vue": "^2.5.13",
    "vue-loader": "^13.7.0",
    "vue-template-compiler": "^2.5.13",
    "webpack": "^3.10.0",
    "webpack-dashboard": "^1.0.2",
    "webpack-dev-server": "^2.10.0"
  },
  "lint-staged": {
    "{src,test}/**/*.{js,html,htm}": "eslint",
    "*.md": "eslint"
  },
  "ava": {
    "files": [
      "test/test-*.js"
    ],
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "env": {
      "docs": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "browsers": [
                  "last 2 versions"
                ]
              },
              "useBuiltIns": true
            }
          ]
        ]
      },
      "production": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "4"
              },
              "useBuiltIns": true
            }
          ]
        ],
        "plugins": [
          "array-includes",
          "transform-runtime",
          "add-module-exports"
        ]
      }
    },
    "presets": [
      [
        "minify",
        {
          "mangle": false
        }
      ]
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "html",
      "ava",
      "unicorn",
      "babel",
      "markdown"
    ],
    "extends": [
      "plugin:unicorn/recommended",
      "plugin:ava/recommended"
    ]
  },
  "clinton": {
    "ignores": [
      "test/**",
      "tmp/**",
      "lib/**",
      "*.{html,jpg}",
      ".idea/**"
    ],
    "rules": {
      "pkg-main": [
        "off"
      ],
      "xo": [
        "off"
      ]
    }
  }
}
